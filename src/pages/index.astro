---
import Scene from '../components/Scene.svelte';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maverick Huynh - Portfolio</title>
  </head>
  <body>
    <Scene client:load />
    
    <div class="portfolio-content">
      <!-- Navigation -->
      <nav class="nav initial-hidden">
        <span class="nav-text">
          Freshman at USC based in Los Angeles / <a href="/" class="home-link">home</a>
        </span>
        <div class="menu-icon">â˜°</div>
      </nav>

      <!-- Hero Section -->
      <section class="hero initial-hidden">
        <div class="hero-content">
          <h1 class="name">
            <span class="name-line name-left">MAVERICK</span>
            <br />
            <span class="name-line name-right">HUYNH</span>
          </h1>
          <p class="title initial-hidden">
            <span class="title-text"></span>
          </p>
        </div>
      </section>

      <!-- Content Section -->
      <section class="content-section">
        <div class="content-container">
          <a href="/about" class="about-me-button">about me</a>
        </div>
      </section>

      <!-- Footer -->
      <footer class="footer initial-hidden">
        <p>Made with svelte, astro, and three.js</p>
      </footer>
    </div>

    <script>
      // Smooth reset animation when home link is clicked on home page
      document.addEventListener('DOMContentLoaded', () => {
        const homeLink = document.querySelector('.home-link');
        const portfolioContent = document.querySelector('.portfolio-content');
        const hero = document.querySelector('.hero');
        
        // Page load animation sequence
        const nav = document.querySelector('.nav');
        const footer = document.querySelector('.footer');
        
        // Step 1: Fade in navigation and footer after a short delay
        setTimeout(() => {
          if (nav) nav.classList.remove('initial-hidden');
          if (footer) footer.classList.remove('initial-hidden');
        }, 500);
        
        // Step 2: Show spheres (they'll pop up via Scene component)
        // Spheres start at 1000ms, with 50 spheres at 20ms intervals
        // Last sphere starts at ~1980ms, finishes at ~2580ms
        
        // Step 3: Fade in hero text after all spheres finish + wait
        setTimeout(() => {
          if (hero) {
            hero.classList.remove('initial-hidden');
            // Trigger slide-in animations
            const maverick = document.querySelector('.name-left');
            const huynh = document.querySelector('.name-right');
            const title = document.querySelector('.title');
            if (maverick) maverick.classList.add('slide-in');
            if (huynh) huynh.classList.add('slide-in');
            // Fade in title text after name slides in
            setTimeout(() => {
              if (title) {
                title.classList.remove('initial-hidden');
                
                // Text cycling animation
                const titleText = title.querySelector('.title-text');
                const texts = ['industrial and systems engineer.', 'founder.', 'designer.'];
                let currentIndex = 0;
                
                // Set initial text
                if (titleText) {
                  titleText.textContent = texts[currentIndex];
                  titleText.style.opacity = '1';
                }
                
                // Cycle through texts
                function cycleText() {
                  if (!titleText) return;
                  
                  // Fade out
                  titleText.style.opacity = '0';
                  
                  setTimeout(() => {
                    // Change text
                    currentIndex = (currentIndex + 1) % texts.length;
                    titleText.textContent = texts[currentIndex];
                    
                    // Fade in
                    setTimeout(() => {
                      titleText.style.opacity = '1';
                    }, 100);
                  }, 1000); // Wait for fade out to complete
                }
                
                // Start cycling after initial display (3 seconds)
                setTimeout(() => {
                  const interval = setInterval(cycleText, 3000); // Change every 3 seconds
                }, 3000);
              }
            }, 800); // After name slide-in completes
          }
        }, 3100); // ~2580ms (spheres finish) + 500ms wait
        
        if (homeLink) {
          homeLink.addEventListener('click', (e) => {
            // If we're already on the home page, trigger smooth reset animation
            if (window.location.pathname === '/') {
              e.preventDefault();
              
              // Scroll to top
              window.scrollTo({
                top: 0,
                behavior: 'smooth'
              });
              
              // Trigger fade-out animation
              if (portfolioContent) {
                portfolioContent.classList.add('fade-out');
              }
              if (hero) {
                hero.classList.add('fade-out');
              }
              
              // After fade-out, fade back in
              setTimeout(() => {
                if (portfolioContent) {
                  portfolioContent.classList.remove('fade-out');
                  portfolioContent.classList.add('fade-in');
                }
                if (hero) {
                  hero.classList.remove('fade-out');
                  hero.classList.add('fade-in');
                }
                
                // Remove fade-in class after animation completes
                setTimeout(() => {
                  if (portfolioContent) {
                    portfolioContent.classList.remove('fade-in');
                  }
                  if (hero) {
                    hero.classList.remove('fade-in');
                  }
                }, 500);
              }, 300);
            }
          });
        }
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: white;
    background: linear-gradient(180deg, #1a1f3a 0%, #2d3a5f 50%, #4a6fa5 100%);
    background-attachment: fixed;
    overflow-x: hidden;
    overflow-y: auto;
  }

  .portfolio-content {
    position: relative;
    z-index: 10;
    pointer-events: auto;
    transition: opacity 0.3s ease-in-out;
  }

  .portfolio-content.fade-out {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .portfolio-content.fade-in {
    opacity: 1;
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Initial hidden state */
  .initial-hidden {
    opacity: 0;
  }

  /* Navigation fade-in */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    z-index: 100;
    transition: opacity 0.6s ease-in;
  }

  .nav:not(.initial-hidden) {
    opacity: 1;
  }

  .nav-text {
    font-size: 0.9rem;
    color: white;
    letter-spacing: 0.1em;
    line-height: 1.2;
  }

  .home-link {
    color: white;
    text-decoration: none;
    transition: text-decoration 0.2s, opacity 0.2s;
  }

  .home-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  .menu-icon {
    font-size: 1.5rem;
    cursor: pointer;
  }

  /* Hero fade-in */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 20;
    pointer-events: none;
    transition: opacity 0.3s ease-in;
    width: 100%;
  }

  .hero:not(.initial-hidden) {
    opacity: 1;
  }

  .hero.fade-out {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .hero.fade-in {
    opacity: 1;
    animation: fadeIn 0.5s ease-in-out;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    padding-top: 4rem;
  }

  .name {
    font-size: 10rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    margin: 0;
    line-height: 1;
    text-transform: uppercase;
    -webkit-text-stroke: 0.5px rgba(255, 255, 255, 0.3);
    text-align: center;
  }

  .name-line {
    display: inline-block;
    opacity: 0;
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .name-left {
    transform: translateX(-100px);
  }

  .name-right {
    transform: translateX(100px);
  }

  .name-line.slide-in {
    opacity: 1;
    transform: translateX(0);
  }

  .title {
    font-size: 3rem;
    margin-top: 3rem;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    text-transform: lowercase;
    transition: opacity 0.6s ease-in;
    min-height: 3.5rem; /* Prevent layout shift */
    letter-spacing: 0.05em;
    text-align: center;
    display: block;
  }

  .title:not(.initial-hidden) {
    opacity: 1;
  }

  .title-text {
    display: inline-block;
    transition: opacity 1s ease-in-out;
  }

  /* Content Section */
  .content-section {
    position: relative;
    min-height: 100vh;
    padding-top: 100vh; /* Start below the hero */
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 15;
  }

  .content-container {
    text-align: center;
    padding: 4rem 2rem;
  }

  .about-me-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1.2rem;
    font-weight: 400;
    color: white;
    text-decoration: none;
    text-transform: lowercase;
    letter-spacing: 0.1em;
    border: 2px solid white;
    transition: all 0.3s ease;
    background: transparent;
  }

  .about-me-button:hover {
    background: white;
    color: #1a1f3a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
  }

  /* Footer fade-in */
  .footer {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 100;
    font-size: 0.85rem;
    color: white;
    opacity: 0.7;
    transition: opacity 0.6s ease-in;
  }

  .footer:not(.initial-hidden) {
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .name {
      font-size: 5rem;
      letter-spacing: 0.1em;
    }

    .nav-text {
      font-size: 0.75rem;
    }
  }
</style>
