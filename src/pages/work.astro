// Work page
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Work - Maverick Huynh</title>
  </head>
  <body>
    <div class="work-page">
      <!-- Navigation -->
      <nav class="nav initial-hidden">
        <span class="nav-text">
          Freshman at USC based in Los Angeles / <a href="/" class="home-link">home</a> / <a href="/work" class="work-link">my work</a>
        </span>
        <div class="menu-icon">â˜°</div>
      </nav>

      <!-- Left side - Fixed -->
      <div class="left-side">
        <!-- Bottom corner text -->
        <div class="work-title-bottom">
          <div class="work-title-line initial-hidden">my</div>
          <div class="work-title-line initial-hidden">work</div>
        </div>
      </div>

      <!-- Right side - Scrollable -->
      <div class="right-side">
        <div class="work-items-container">
          <!-- Work Item 1 -->
          <div class="work-item initial-hidden">
            <div class="work-item-image">
              <img src="/images/IMG_2935 (1).jpg" alt="Work item 1" class="work-image" />
              <div class="center-image-overlay">
                <img src="/images/IMG_2930 (1).jpg" alt="Work item 1 center" class="center-image" />
              </div>
              <div class="image-overlay">
                <div class="overlay-content">
                  <div class="overlay-title">Founder, NoSolesLost</div>
                  <div class="overlay-subtitle">Custom hand-painted Air Force 1s & wearable art</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Work Item 2 -->
          <div class="work-item initial-hidden">
            <div class="work-item-image">
              <div class="image-placeholder"></div>
            </div>
          </div>

          <!-- Work Item 3 -->
          <div class="work-item initial-hidden">
            <div class="work-item-image">
              <div class="image-placeholder"></div>
            </div>
          </div>

          <!-- Work Item 4 -->
          <div class="work-item initial-hidden">
            <div class="work-item-image">
              <div class="image-placeholder"></div>
            </div>
          </div>

          <!-- Work Item 5 -->
          <div class="work-item initial-hidden">
            <div class="work-item-image">
              <div class="image-placeholder"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Step 1: Fade in navigation first (200ms delay)
        const nav = document.querySelector('.nav');
        setTimeout(() => {
          if (nav) nav.classList.remove('initial-hidden');
        }, 200);

        // Step 2: Animate left side title lines sequentially (600ms delay)
        const titleLines = document.querySelectorAll('.work-title-line');
        titleLines.forEach((line, index) => {
          setTimeout(() => {
            line.classList.remove('initial-hidden');
            line.classList.add('slide-in');
          }, 600 + (index * 200)); // 200ms delay between each line
        });

        // Step 3: Animate work items sequentially (1200ms delay after title starts)
        const workItems = document.querySelectorAll('.work-item');
        workItems.forEach((item, index) => {
          setTimeout(() => {
            item.classList.remove('initial-hidden');
            item.classList.add('fade-in-up');
          }, 1200 + (index * 150)); // 150ms delay between each item
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden; /* Prevent body scrolling */
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: white;
    background: linear-gradient(180deg, #000000 0%, #1a1a1a 50%, #2d2d2d 100%);
    background-attachment: fixed;
  }

  .work-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #000000 0%, #1a1a1a 50%, #2d2d2d 100%);
    background-attachment: fixed;
    display: flex;
    overflow: hidden;
  }

  /* Left side - Fixed */
  .left-side {
    width: 50%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    pointer-events: none;
    background: rgba(0, 0, 0, 0.3); /* Different background to differentiate */
  }

  /* Right side - Scrollable */
  .right-side {
    width: 50%;
    height: 100vh;
    margin-left: 50%;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 8rem 4rem 4rem 4rem;
    z-index: 20;
  }

  /* Custom scrollbar */
  .right-side::-webkit-scrollbar {
    width: 6px;
  }

  .right-side::-webkit-scrollbar-track {
    background: transparent;
  }

  .right-side::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }

  .right-side::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .work-items-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .work-item {
    color: white;
    width: 100%;
  }

  .work-item-image {
    width: 100%;
    margin-bottom: 0;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    border-radius: 8px;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1), box-shadow 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    background: #000;
    will-change: transform;
  }

  .work-item-image:hover {
    transform: translateY(-8px) scale(1.01);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.7), 0 8px 24px rgba(0, 0, 0, 0.5);
  }

  .work-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 1s cubic-bezier(0.23, 1, 0.32, 1), filter 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    will-change: transform, filter;
  }

  .work-item-image:hover .work-image {
    filter: brightness(0.45) contrast(1.1) saturate(1.1);
    transform: scale(1.08) translateY(-2px);
  }

  .center-image-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.98);
    width: 42%;
    max-width: 420px;
    min-width: 260px;
    z-index: 10;
    border-radius: 6px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6), 0 8px 24px rgba(0, 0, 0, 0.5);
    transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1), 
                box-shadow 0.8s cubic-bezier(0.23, 1, 0.32, 1),
                border-color 0.6s ease;
    pointer-events: none;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(0.5px);
    will-change: transform, box-shadow;
  }

  .center-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    border-radius: 6px;
    opacity: 0.95;
    transition: opacity 0.6s ease, transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    transform: scale(1);
    will-change: opacity, transform;
  }

  .work-item-image:hover .center-image-overlay {
    transform: translate(-50%, -50%) scale(1.05) translateY(-8px);
    box-shadow: 0 28px 90px rgba(0, 0, 0, 0.75), 0 16px 40px rgba(0, 0, 0, 0.65);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .work-item-image:hover .center-image {
    opacity: 1;
    transform: scale(1.02);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.6) 50%, rgba(0, 0, 0, 0.75) 100%);
    transition: opacity 0.6s cubic-bezier(0.23, 1, 0.32, 1), backdrop-filter 0.6s ease;
    pointer-events: none;
    z-index: 15;
    border-radius: 8px;
    backdrop-filter: blur(0px);
  }

  .work-item-image:hover .image-overlay {
    backdrop-filter: blur(2px);
  }

  .work-item-image:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    text-align: center;
    color: white;
    padding: 3rem 2rem;
    transform: translateY(30px) scale(0.95);
    opacity: 0;
    transition: transform 0.7s cubic-bezier(0.23, 1, 0.32, 1) 0.15s,
                opacity 0.7s cubic-bezier(0.23, 1, 0.32, 1) 0.15s;
  }

  .work-item-image:hover .overlay-content {
    transform: translateY(0) scale(1);
    opacity: 1;
  }

  .overlay-title {
    font-size: 1.75rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(15px);
    transition: opacity 0.6s cubic-bezier(0.23, 1, 0.32, 1) 0.25s, 
                transform 0.6s cubic-bezier(0.23, 1, 0.32, 1) 0.25s;
  }

  .work-item-image:hover .overlay-title {
    opacity: 1;
    transform: translateY(0);
  }

  .overlay-subtitle {
    font-size: 1.1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: 0.03em;
    line-height: 1.6;
    opacity: 0;
    transform: translateY(15px);
    transition: opacity 0.6s cubic-bezier(0.23, 1, 0.32, 1) 0.35s, 
                transform 0.6s cubic-bezier(0.23, 1, 0.32, 1) 0.35s;
  }

  .work-item-image:hover .overlay-subtitle {
    opacity: 1;
    transform: translateY(0);
  }

  .image-placeholder {
    width: 100%;
    height: 500px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.25);
    font-size: 0.9rem;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .work-item-image:hover .image-placeholder {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.25);
  }

  .work-item-footer {
    background: rgba(0, 0, 0, 0.6);
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .work-item-text {
    font-size: 0.9rem;
    color: white;
    letter-spacing: 0.05em;
  }

  .work-item-number {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-left: 1rem;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    z-index: 100;
  }

  .nav-text {
    font-size: 0.9rem;
    color: white;
    letter-spacing: 0.1em;
    line-height: 1.2;
  }

  .home-link {
    color: white;
    text-decoration: none;
    transition: text-decoration 0.2s, opacity 0.2s;
  }

  .home-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  .work-link {
    color: white;
    text-decoration: none;
    transition: text-decoration 0.2s, opacity 0.2s;
    cursor: pointer;
  }

  .work-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  .menu-icon {
    font-size: 1.5rem;
    cursor: pointer;
  }

  /* Bottom corner work title */
  .work-title-bottom {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    z-index: 50;
    pointer-events: none;
  }

  .work-title-line {
    font-size: 10rem;
    font-weight: 400;
    color: white;
    line-height: 1;
    text-transform: lowercase;
    letter-spacing: -0.02em;
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  /* Initial hidden state */
  .initial-hidden {
    opacity: 0;
  }

  /* Navigation fade-in */
  .nav.initial-hidden {
    opacity: 0;
  }

  .nav:not(.initial-hidden) {
    opacity: 1;
    transition: opacity 0.6s ease-in;
  }

  /* Title line slide-in animation */
  .work-title-line.initial-hidden {
    opacity: 0;
    transform: translateX(-50px);
  }

  .work-title-line.slide-in {
    opacity: 1;
    transform: translateX(0);
  }

  /* Work item fade-in-up animation */
  .work-item.initial-hidden {
    opacity: 0;
    transform: translateY(30px);
  }

  .work-item.fade-in-up {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
</style>
