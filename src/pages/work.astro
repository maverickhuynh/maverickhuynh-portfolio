<style is:global>
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden; /* Prevent body scrolling */
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: white;
    background: linear-gradient(180deg, #000000 0%, #1a1a1a 50%, #2d2d2d 100%);
    background-attachment: fixed;
  }

  .work-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #000000 0%, #1a1a1a 50%, #2d2d2d 100%);
    background-attachment: fixed;
    display: flex;
    overflow: hidden;
  }

  /* Left side - Fixed */
  .left-side {
    width: 50%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    pointer-events: none;
    background: rgba(0, 0, 0, 0.3); /* Different background to differentiate */
  }

  /* Right side - Scrollable */
  .right-side {
    width: 50%;
    height: 100vh;
    margin-left: 50%;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 8rem 4rem 4rem 4rem;
    z-index: 20;
  }

  .work-items-container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .work-item {
    color: white;
    width: 100%;
  }

  .work-item-image {
    width: 100%;
    margin-bottom: 0;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    border-radius: 4px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.4s ease;
  }

  .work-item-image:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  }

  .work-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), filter 0.4s ease;
  }

  .work-item-image:hover .work-image {
    filter: brightness(0.35) contrast(1.1);
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.5) 100%);
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .work-item-image:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    text-align: center;
    color: white;
    padding: 3rem 2rem;
    transform: translateY(20px);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
  }

  .work-item-image:hover .overlay-content {
    transform: translateY(0);
  }

  .overlay-title {
    font-size: 1.75rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s, transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
  }

  .work-item-image:hover .overlay-title {
    opacity: 1;
    transform: translateY(0);
  }

  .overlay-subtitle {
    font-size: 1.1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: 0.03em;
    line-height: 1.6;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.3s, transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.3s;
  }

  .work-item-image:hover .overlay-subtitle {
    opacity: 1;
    transform: translateY(0);
  }

  .image-placeholder {
    width: 100%;
    height: 500px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.9rem;
  }

  .work-item-footer {
    background: rgba(0, 0, 0, 0.6);
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .work-item-text {
    font-size: 0.9rem;
    color: white;
    letter-spacing: 0.05em;
  }

  .work-item-number {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-left: 1rem;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    z-index: 100;
  }

  .nav-text {
    font-size: 0.9rem;
    color: white;
    letter-spacing: 0.1em;
    line-height: 1.2;
  }

  .home-link {
    color: white;
    text-decoration: none;
    transition: text-decoration 0.2s, opacity 0.2s;
  }

  .home-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  .work-link {
    color: white;
    text-decoration: none;
    transition: text-decoration 0.2s, opacity 0.2s;
    cursor: pointer;
  }

  .work-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  .menu-icon {
    font-size: 1.5rem;
    cursor: pointer;
  }

  /* Bottom corner work title */
  .work-title-bottom {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    z-index: 50;
    pointer-events: none;
  }

  .work-title-line {
    font-size: 10rem;
    font-weight: 400;
    color: white;
    line-height: 1;
    text-transform: lowercase;
    letter-spacing: -0.02em;
  }
</style>
